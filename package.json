{
  "name": "snow-box",
  "version": "0.0.1",
  "description": "Electron + Vue3 + Vite + TypeScript Application",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "vue-tsc --noEmit && vite build && electron-builder"
  },
  "keywords": [
    "electron",
    "vue3",
    "vite",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vue-tsc": "^2.0.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "build": {
    "appId": "com.snowbox.app",
    "productName": "SnowBox",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "logo.png"
    ],
    "mac": {
      "target": "dmg",
      "icon": "logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "logo.png"
    }
  }
}
